datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

enum Role {
  Mentor
  Mentee
}

model Field {
  fieldId     Int    @id @default(autoincrement()) @map("field_id")
  name        String
  description String
  users       User[]
}

model Offer {
  offerId     Int    @id @default(autoincrement()) @map("offer_id")
  name        String
  description String
  users       User[]
}

model User {
  clerkId     String     @id @map("clerk_id")
  name        String  @db.TinyText
  email       String  @db.TinyText
  gender      String?  @db.TinyText
  role        Role?
  description String?
  schoolName  String?  @map("school_name")
  major       String?
  title       String?
  workplace   String?
  githubUrl   String?  @map("github_url")
  linkedinUrl String?  @map("linkedin_url")
  bookingUrl  String?  @map("booking_url")
  fields      Field[]
  offers      Offer[]
}
